<TestSuite>  
  <url>https://www.saucedemo.com/</url>
  <TestCase>    
    <Scenario>Normal Login</Scenario>
    <Action>      
      <type>Input Text</type>
      <locator>username</locator>
      <text>valid_username</text>
    </Action>
    <Action>      
      <type>Input Text</type>
      <locator>password</locator>
      <text>valid_password</text>
    </Action>
    <Action>      
      <type>Click Element</type>
      <locator>login_button</locator>
    </Action>
    <Validation>      
      <type>URLValidation</type>
      <url>https://www.saucedemo.com/inventory.html</url>
    </Validation>
  </TestCase>
  <TestCase>    
    <Scenario>Locked</Scenario>
    <Action>      
      <type>Input Text</type>
      <locator>username</locator>
      <text>locked_username</text>
    </Action>
    <Action>      
      <type>Input Text</type>
      <locator>password</locator>
      <text>valid_password</text>
    </Action>
    <Action>      
      <type>Click Element</type>
      <locator>login_button</locator>
    </Action>
    <Validation>      
      <type>PageContainValidation</type>
      <text>Sorry, this user has been locked out.</text>
    </Validation>
  </TestCase>
  <TestCase>    
    <Scenario>WrongPassword</Scenario>
    <Action>      
      <type>Input Text</type>
      <locator>username</locator>
      <text>valid_username</text>
    </Action>
    <Action>      
      <type>Input Text</type>
      <locator>password</locator>
      <text>invalid_password</text>
    </Action>
    <Action>      
      <type>Click Element</type>
      <locator>login_button</locator>
    </Action>
    <Validation>      
      <type>PageContainValidation</type>
      <text>Username and password do not match any user in this service</text>
    </Validation>
  </TestCase>
  <TestCase>    
    <Scenario>EmptyPassword</Scenario>
    <Action>      
      <type>Input Text</type>
      <locator>username</locator>
      <text>valid_username</text>
    </Action>
    <Action>      
      <type>Input Text</type>
      <locator>password</locator>
      <text>empty</text>
    </Action>
    <Action>      
      <type>Click Element</type>
      <locator>login_button</locator>
    </Action>
    <Validation>      
      <type>PageContainValidation</type>
      <text>Username is required</text>
    </Validation>
  </TestCase>
</TestSuite>